<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hillarious.bohdansasko.learnandroid.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-1dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What do you want do drink?" />

        <CheckBox
            android:id="@+id/checkBox_var1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coffee" />

        <CheckBox
            android:id="@+id/checkBox1_var2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Juice" />

        <CheckBox
            android:id="@+id/checkBox2_var3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milk" />

        <CheckBox
            android:id="@+id/checkBox_var4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nothing" />

        <Button
            android:id="@+id/button_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Checking" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Result:"
            />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
